def check_option_clicked(bot_options, user_response):
    options = bot_options.split('|')
    for option in options:
        if option.lower() in user_response.lower():
            return True
    return False

# apply the function to the dataframe and create a new column 'option_clicked'
df['option_clicked'] = df.apply(lambda x: check_option_clicked(x['bot_text'], x['human_text']), axis=1)
